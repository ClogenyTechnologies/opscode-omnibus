resource pc0 {
  syncer {
    rate <%= @sync_rate %>;
  }
 
  on <%= @primary['fqdn'] %> {
    device <%= @device %>;
    disk <%= @disk %>;
    flexible-meta-disk  <%= @flexible_meta_disk %>;
    address <%= @ipv6_on ? "ipv6" : "ipv4" %> <%= @primary['ip'] %>:<%= @primary['port'] %>;
  }

  on <%= @secondary['fqdn'] %> {
    device <%= @device %>;
    disk <%= @disk %>;
    flexible-meta-disk  <%= @flexible_meta_disk %>;
    address <%= @ipv6_on ? "ipv6" : "ipv4" %> <%= @secondary['ip'] %>:<%= @secondary['port'] %>;
  }
}
