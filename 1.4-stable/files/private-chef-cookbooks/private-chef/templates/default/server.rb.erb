#
# Chef Server Config File
#
# Dynamically generated by Chef - local modifications will be replaced

log_level          :info
log_location       STDOUT
private_chef_url    "<%= @url %>"
file_cache_path    "<%= File.join(@dir, 'cache') %>"
sandbox_path       "<%= node['private_chef']['opscode-chef']['sandbox_path'] %>"
checksum_path      "<%= node['private_chef']['opscode-chef']['checksum_path'] %>"
cookbook_tarball_path  "<%= File.join(@dir, 'cookbook-tarballs') %>"
validation_client_name "<%= @validation_client_name %>"
validation_key "/etc/chef/validation.pem"
web_ui_client_name "chef-webui"
web_ui_key "/etc/chef/webui.pem"
web_ui_admin_user_name  "<%= @web_ui_admin_user_name %>"
web_ui_admin_default_password "<%= @web_ui_admin_default_password %>"

solr_url        "<%= node['private_chef']['chef-solr']['url'] %>"

amqp_host '<%= node['private_chef']['rabbitmq']['vip'] %>'
amqp_port '<%= node['private_chef']['rabbitmq']['node_port'] %>'
amqp_user '<%= node['private_chef']['rabbitmq']['user'] %>'
amqp_pass '<%= node['private_chef']['rabbitmq']['password'] %>'
amqp_vhost '<%= node['private_chef']['rabbitmq']['vhost'] %>'
amqp_consumer_id "<%= @consumer_id %>"

umask <%= node['private_chef']['umask'] %>

signing_ca_cert    "<%= File.join(@dir, 'cert.pem') %>"
signing_ca_key     "<%= File.join(@dir, 'key.pem') %>"
signing_ca_user    "<%= node['private_chef']['user']['username'] %>"
signing_ca_group   "<%= node['private_chef']['user']['username'] %>"

